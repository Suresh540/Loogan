@page "/ActivityStream/ActivityStream"
@using Loogan.API.Models.Models
@using Loogan.Web.UI.Components
@using Loogan.Web.UI.Models
@using Loogan.Web.UI.Pages.Shared
@using Loogan.Web.UI.Resources.Pages
@using Microsoft.Extensions.Localization
@model Loogan.Web.UI.Pages.ActivityStream.ActivityStreamModel
@inject IStringLocalizer<ContentLabel> _localizer
@attribute [Loogan.Web.UI.Utilities.LooganStudentAuthorize("Student,Teacher")]
<div class="chatcontainer">
    <div class="row p-1">
        <div class="col-1">
            Me
        </div>
        <div class="col-5">
            <input type="text" id="userInput" value="@HttpContext.Session.GetString("UserName")" disabled />
        </div>
    </div>
    <div class="row p-1">
        <div class="col-1">
            User
        </div>
        <div class="col-5">
            <select id="selectedUser" class="form-select">
                @foreach (var item in Model.Users ?? Enumerable.Empty<PagingUserModel>())
                {
                    <option value="@item.UserName">@(item.FirstName + ' ' + item.LastName)</option>
                }
            </select>
        </div>
    </div>
    <div class="row p-1">
        <div class="col-1">
            Message
        </div>
        <div class="col-10">
            <textarea class="form-control" id="messageInput" rows="8" cols="8">
                                </textarea>
        </div>
    </div>
    <div class="row p-1">
        <div class="col-6 text-end">
            <input type="button" class="btn btn-primary" id="sendButton" value="Send Message" />
            <input type="button" class="btn btn-secondary" id="clearButton" value="Clear" />
        </div>
    </div>
    <div class="row p-1">
        <div class="col-6">
            <hr />
        </div>
    </div>
    <div class="row p-1">
        <div class="col-6">
            <ul id="messagesList"></ul>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        if (sessionStorage.getItem("chatMessages") != null && sessionStorage.getItem("chatMessages") != undefined) {
            var list = sessionStorage.getItem("chatMessages")
            if (list != undefined && list != null) {
                var user = list.split('$');
                var li = document.createElement("li");
                document.getElementById("selectedUser").value = user[0];
                document.getElementById("messagesList").appendChild(li);
                li.textContent = `${user[0]} says ${user[1]}`;
                sessionStorage.removeItem("chatMessages");
            }
        }
    });
</script>
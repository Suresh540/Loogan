@page "rightsidepopup"
@model Loogan.Web.UI.Pages.Shared.RightSidePopupModel

<div class="modal modal-right fade" id="right_modal" tabindex="-1" role="dialog" aria-labelledby="right_modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Contact Information</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h3>Basic Information</h3>
                <hr />
                <p>
                    <div>
                        <b>First Name</b><br />
                        @* @Model.UserProfileModel.FirstName; *@
                    </div>

                    <div>
                        <b>Last Name</b><br />
                        Kalaga
                    </div>
                    <div>
                        <b>Additional Name</b><br />
                        <input type="text" />
                    </div>
                    <div>
                        <b>Email Address</b><br />
                        Suresh.kalaga@gmail.com
                    </div>
                </p>
                <h3 style="margin:5px">Additional Information</h3>
                <hr />
                <p>
                    <div>
                        <b>Gender</b><br />
                        <select>
                            <option>Male</option>
                            <option>Female</option>
                        </select>
                    </div>
                    <div>
                        <b>Prefix</b><br />
                        <input type="text" />
                    </div>
                    <div>
                        <b>Middle Name</b><br />
                        Suresh
                    </div>
                    <div>
                        <b>Education Level</b><br />
                        <input type="text" />
                    </div>
                    <div>
                        <b>Website</b><br />
                        <input type="text" />
                    </div>
                </p>

                <h3 style="margin:5px">Contact Information</h3>
                <hr />
                <p>
                    <div>
                        <b>City</b><br />
                        <input type="text" />
                    </div>
                    <div>
                        <b>State/Province</b><br />
                        <input type="text" />
                    </div>
                    <div>
                        <b>Country</b><br />
                        <input type="text" />
                    </div>
                    <div>
                        <b>Fax Number</b><br />
                        <input type="text" />
                    </div>
                </p>

                <h3 style="margin:5px">Job Information</h3>
                <hr />
                <p>
                    <div>
                        <b>Company</b><br />
                        <input type="text" />
                    </div>
                    <div>
                        <b>Job Title</b><br />
                        <input type="text" />
                    </div>
                    <div>
                        <b>Department</b><br />
                        <input type="text" />
                    </div>
                </p>
            </div>
            <div class="modal-footer modal-footer-fixed">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

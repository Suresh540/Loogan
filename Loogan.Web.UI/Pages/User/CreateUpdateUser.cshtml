@page "/User/user"
@using Loogan.Web.UI.Components
@model Loogan.API.Models.Models.UserModel
<component type="typeof(Upper_Component)" render-mode="Static" />
<div id="site-wrap" class="off-canvas-wrap">
    <div class="inner-wrap">
        <div class="row">
            <div class="col-2 bb-login pointscroll leftmenu">
                @{
                    LeftSideBarModel leftSideBar = new LeftSideBarModel();
                    await Html.RenderPartialAsync("leftsidebar", leftSideBar);
                }
            </div>
            <div class="col-10 base-profile pointscroll righcontent">
                <div class="columns small-12 profile-content" style="margin-top:2px !important">
                    <div style="text-align:right">
                        <button onclick="showUsers()" type="button" style="background:yellow;color:black" class="btn btn-light border rounded-pill shadow-sm mb-1" data-toggle="modal" data-target="#bottom_modal">
                            <b>Show Users</b>
                        </button>
                        <button type="button" class="btn btn-light border rounded-pill shadow-sm mb-1"
                                style="background:red;color:white">
                            <b>Clear</b>
                        </button>
                        <button type="button" class="btn btn-light border rounded-pill shadow-sm mb-1" onclick="createUser()"
                                style="background:blue;color:white">
                            <b>Save</b>
                        </button>
                    </div>
                    <div class="columns large-6 small-12 user-information">
                        <h3>Basic Information</h3>
                        <hr />
                        <p>
                            <div>
                                <b>First Name</b><br />
                                <input id="txtFirstName" type="text" />
                            </div>
                            <div>
                                <b>Middle Name</b><br />
                                <input id="txtMiddleName" type="text" />
                            </div>
                            <div>
                                <b>Last Name</b><br />
                                <input id="txtLastName" type="text" />
                            </div>
                            <div>
                                <b>Additional Name</b><br />
                                <input id="txtAdditionalName" type="text" />
                            </div>
                            <div>
                                <b>Email Address</b><br />
                                <input id="txtEmailAddress" type="text" />
                            </div>
                            <div>
                                <b>User Name</b><br />
                                <input id="txtUserName" type="text" />
                            </div>
                            <div>
                                <b>Password</b><br />
                                <input id="txtPassword" type="password" />
                            </div>
                            @*  <div>
                            <b>Confirm Password</b><br />
                            <input id="txtcnfrmpassword" type="password" />
                            </div> *@
                        </p>
                        <h3 style="margin:5px">Additional Information</h3>
                        <hr />
                        <p>
                            <div>
                                <b>Gender</b><br />
                                <select id="ddlGender">
                                </select>
                            </div>
                            <div>
                                <b>Prefix</b><br />
                                <input id="txtPreFix" type="text" />
                            </div>
                            <div>
                                <b>suffix</b><br />
                                <input id="txtSuffix" type="text" />
                            </div>
                            <div>
                                <b>Education Level</b><br />
                                <select id="ddlEductionLevel">
                                    <option>Junior</option>
                                    <option>Senior</option>
                                </select>
                            </div>
                            <div>
                                <b>Website</b><br />
                                <input id="txtWebsite" type="text" />
                            </div>
                        </p>
                    </div>
                    <div class="columns large-6 small-12 user-settings">

                        <h3 style="margin:5px">Contact Information</h3>
                        <hr />
                        <p>
                            <div>
                                <b>Phone Number</b><br />
                                <input id="txtPhone" type="text" />
                            </div>
                            <div>
                                <b>City</b><br />
                                <input id="txtCity" type="text" />
                            </div>
                            <div>
                                <b>State/Province</b><br />
                                <input id="txtState" type="text" />
                            </div>
                            <div>
                                <b>Country</b><br />
                                <input id="txtCountry" type="text" />
                            </div>
                            <div>
                                <b>Fax Number</b><br />
                                <input id="txtFaxNumber" type="text" />
                            </div>
                        </p>
                        <h3 style="margin:5px">Job Information</h3>
                        <hr />
                        <p>
                            <div>
                                <b>Company</b><br />
                                <input id="txtCompany" type="text" />
                            </div>
                            <div>
                                <b>Job Title</b><br />
                                <input id="txtJobTitle" type="text" />
                            </div>
                            <div>
                                <b>Department</b><br />
                                <input id="txtDepartment" type="text" />
                            </div>
                        </p>

                    </div>
                </div>
                <component type="typeof(Lower_Component)" render-mode="Static" /><br />
            </div>
        </div>
    </div>
</div>
<div class="modal modal-full fade" id="bottom_modal" tabindex="-1" role="dialog" aria-labelledby="fullscreen_modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">User(s) List</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table class="table">
                    <thead id="tdHeader">
                        <tr>
                            <td>
                                Firstname
                            </td>
                            <td>
                                Lastname
                            </td>
                            <td>
                                Username
                            </td>
                            <td>
                                Phone No.
                            </td>
                            <td>
                                Email Address
                            </td>
                            <td>
                                City
                            </td>
                            <td>
                                State
                            </td>
                            <td>
                                Country
                            </td>
                        </tr>
                    </thead>
                    <tbody id="tdBody">
                    </tbody>
                </table>
            </div>
            <div class="modal-footer modal-footer-fixed d-none">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

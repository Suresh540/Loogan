@page "/Admin/Institution"
@using Loogan.Web.UI.Components
@using Loogan.Web.UI.Resources.Pages
@using Loogan.Web.UI.Utilities
@using Microsoft.Extensions.Localization
@model Loogan.API.Models.Models.Admin.InstitutionModel
@attribute [LooganAdminAuthorize("Admin")]
@inject IStringLocalizer<ContentLabel> Localizer
@{
    var showInstitution = "showInstitution";
    var getTotalRecords = "getTotalRecords";
}
}
<component type="typeof(Upper_Component)" render-mode="Static" />

<div id="site-wrap" class="off-canvas-wrap">
    <div class="inner-wrap">
        <div class="row">
            <div class="col-2 bb-login pointscroll leftmenu">
                <component type="typeof(LeftSideBar_Component)" render-mode="Server" />
            </div>
            <div class="col-10">
                <div class="base-profile pointscroll righcontent scrollrightend">
                    <div class="columns small-12 profile-content" style="margin-top:2px !important">
                        <div class="row">
                            <div class="col-12 left-align">
                                <h2 class="institutiontitle">@Localizer["InstitutionKey"]</h2>
                                <hr />
                            </div>
                        </div>
                        <div style="text-align:right">
                            <button onclick="institution.showInstitution()" type="button" style="background:gray;color:black" class="btn btn-light border rounded-pill shadow-sm mb-1" data-toggle="modal" data-target="#bottom_modal">
                                <b>@Localizer["ShowInstitutionKey"]</b>
                            </button>
                            <button type="button" class="btn btn-light border rounded-pill shadow-sm mb-1" onclick="institution.clearInstitution()"
                                    style="background:lightgreen;color:black">
                                <b>@Localizer["ClearKey"]</b>
                            </button>
                            <button id="btnSaveInstitution" type="button" class="btn btn-light border rounded-pill shadow-sm mb-1" onclick="institution.createInstitution('btnSaveInstitution')"
                                    style="background:blue;color:white">
                                <b>@Localizer["SaveKey"]</b>
                            </button>
                        </div>
                        <div class="columns large-6 small-12 user-information">
                            <p>
                                <div>
                                    <b>
                                        @Localizer["InstitutionNameKey"] <b class="text-danger">*</b>
                                    </b><br />
                                    <input id="txtInstitutionName" type="text" />
                                    <input type="hidden" id="hdnInstitutionId" name="hdnInstitutionId" value="0" />
                                </div>
                                <div>
                                    <b>
                                        @Localizer["DescriptionKey"]
                                    </b><br />
                                    <input id="txtDescription" type="text" />
                                </div>
                                <div>
                                    <b>
                                        @Localizer["AddressKey"]
                                    </b><br />
                                    <input id="txtAddress" type="text" />
                                </div>
                                <div>
                                    <b>
                                        @Localizer["PhoneNumberKey"]
                                    </b><br />
                                    <input id="txtPhoneNumber" type="text" />
                                </div>
                                <div>
                                    <b>
                                        @Localizer["EmailAddressKey"]
                                    </b><br />
                                    <input id="txtEmailAddress" type="text" />
                                </div>
                                <div>
                                    <b>
                                        @Localizer["WebsiteKey"]
                                    </b><br />
                                    <input id="txtWebsite" type="text" />
                                </div>
                            </p>
                        </div>
                        <div class="columns large-6 small-12 user-information">
                            <p>
                                <div>
                                    <b>
                                        @Localizer["LogoKey"]
                                    </b><br />
                                    <input id="txtLogo" type="text" />
                                </div>
                                <div>
                                    <b>
                                        @Localizer["MissionKey"]
                                    </b><br />
                                    <input id="txtMission" type="text" />
                                </div>
                                <div>
                                    <b>
                                        @Localizer["VisionKey"]
                                    </b><br />
                                    <input id="txtVision" type="text" />
                                </div>
                                <div>
                                    <b>
                                        @Localizer["CommentsKey"]
                                    </b><br />
                                    <input id="txtComments" type="text" />
                                </div>
                            </p>
                        </div>
                    </div>
                </div>
                <component type="typeof(Lower_Component)" render-mode="Static" /><br />
            </div>
        </div>
    </div>
</div>

<div class="modal modal-full fade" id="bottom_modal" tabindex="-1" role="dialog" aria-labelledby="fullscreen_modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">@Localizer["InstitutionListKey"]</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table class="table">
                    <thead id="tdHeader">
                        <tr>
                            <td>
                                &nbsp;
                            </td>

                            <td>
                                @Localizer["InstitutionNameKey"]
                            </td>
                            <td>
                                @Localizer["AddressKey"]
                            </td>
                            <td>
                                @Localizer["PhoneNumberKey"]
                            </td>
                            <td>
                                @Localizer["WebsiteKey"]
                            </td>
                            <td>
                                @Localizer["MissionKey"]
                            </td>
                            <td>
                                @Localizer["VisionKey"]
                            </td>
                        </tr>
                    </thead>
                    <tbody id="tdBody">
                    </tbody>
                </table>
                <component type="typeof(Paging_Component)" render-mode="ServerPrerendered"
                           param-TotalRecords="10" param-NavigateURL="showInstitution" param-TotalRecordsURL="getTotalRecords" />
            </div>
            <div class="modal-footer modal-footer-fixed d-none">
                <button id="btnCreateClose" type="button" class="btn btn-secondary" data-dismiss="modal">
                    @Localizer["CloseKey"]
                </button>
                <button type="button" class="btn btn-primary">@Localizer["SaveChangesKey"]</button>
            </div>
        </div>
    </div>
</div>
<script>
    function fnLoad() {
        // institution.ddlStudentCourse();
    }
    setTimeout(fnLoad(), 700);
</script>

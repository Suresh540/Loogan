@page "/Admin/Staff"
@using Loogan.Web.UI.Components
@using Loogan.Web.UI.Resources.Pages
@using Loogan.Web.UI.Utilities
@using Microsoft.Extensions.Localization
@model Loogan.API.Models.Models.Admin.StaffModel
@attribute [LooganAdminAuthorize("Admin")]
@inject IStringLocalizer<ContentLabel> Localizer
@{
    var showStaffs = "showStaffs";
    var getTotalRecords = "getTotalRecords";
}
<div class="row">
    <div class="col-12 left-align">
        <h2 class="coursetitle">@Localizer["StaffListMappingKey"]</h2>
        <hr />
    </div>
</div>
<table class="table">
    <thead id="tdHeader">
        <tr>
            <td>
                &nbsp;
            </td>
            <td>
                @Localizer["FirstNameKey"]
            </td>
            <td>
                @Localizer["LastNameKey"]
            </td>
            <td>
                @Localizer["StaffNameKey"]
            </td>
        </tr>
    </thead>
    <tbody id="tdBody">
    </tbody>
</table>
<component type="typeof(Paging_Component)" render-mode="ServerPrerendered"
           param-TotalRecords="10" param-NavigateURL="showStaffs" param-TotalRecordsURL="getTotalRecords" />
<div class="modal modal-top fade" id="top_modal" tabindex="-1" role="dialog" aria-labelledby="fullscreen_modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">@Localizer["StaffListMappingKey"]</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="btntopclose">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="columns small-12 profile-content" style="margin-top:2px !important">
                    <div style="text-align:right">
                        
                      @*   <button type="button" class="btn btn-light border rounded-pill shadow-sm mb-1" onclick="clearStaffData()"
                                style="background:lightgreen;color:black">
                            <b>@Localizer["ClearKey"]</b>
                        </button> *@
                        <button id="btnSavestaff" type="button" class="btn btn-light border rounded-pill shadow-sm mb-1" onclick="createStaff('btnSavestaff')"
                                style="background:blue;color:white">
                            <b>@Localizer["SaveKey"]</b>
                        </button>
                    </div>
                    <div class="columns large-6 small-12 user-information">
                        <h3>
                            @Localizer["StaffInformationKey"]
                        </h3>
                        <hr />
                        <p>
                            <div>
                                <b>
                                    @Localizer["FirstNameKey"] <b class="text-danger">*</b>
                                </b><br />
                                <input id="txtStaffFirstName" type="text" required />
                                <input type="hidden" id="hdnStaffId" name="hdnStaffId" value="0" />
                                <input type="hidden" id="hdnStaffCode" name="hdnStaffCode" value="0" />
                                <input type="hidden" id="hdnUserId" name="hdnUserId" value="0" />
                            </div>
                            <div>
                                <b>
                                    @Localizer["LastNameKey"] <b class="text-danger">*</b>
                                </b><br />
                                <input id="txtStaffLastName" type="text" required />
                            </div>
                            <div>
                                <b>
                                    @Localizer["StaffNameKey"] <b class="text-danger">*</b>
                                </b><br />
                                <input id="txtStaffName" type="text" required />
                            </div>
                        </p>

                    </div>
                </div>
            </div>
            <div class="modal-footer modal-footer-fixed d-none">
                <button id="btnCreateClose" type="button" class="btn btn-secondary" data-dismiss="modal">
                    @Localizer["CloseKey"]
                </button>
                <button type="button" class="btn btn-primary">@Localizer["SaveChangesKey"]</button>
            </div>
        </div>
    </div>
</div>
<script>
    setTimeout(showStaffs(), 700);
</script>

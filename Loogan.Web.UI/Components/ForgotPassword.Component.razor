@inherits Loogan.Web.UI.Components.ForgotComponentBase

<div class="modal modal-static fade" id="top_modal" tabindex="-1" aria-labelledby="top_modal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Forgot Password</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-2">
                        <b>Username</b>&nbsp;
                    </div>
                    <div class="col-9">
                        <input type="text" id="txtForgotPwd" class="form-control-color" autofocus />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary"  data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="getUserEmailByUserName()">Submit</button>
            </div>
        </div>
    </div>
</div>
